CompileFlags:
  Add:
    - -std=c++20
    - -Wall
    - -Wextra
    - -Wpedantic
  Remove:
    - -Werror  # Allow clangd to work even with warnings

Diagnostics:
  UnusedIncludes: Strict
  MissingIncludes: Strict

Index:
  Background: Build

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

# Hover configuration
# Note: For standard library functions, clangd shows template details.
# For your own code, add /// documentation comments above functions/classes
# and they'll appear in hovers. Example:
#   /// Removes the last character from the string.
#   void my_function() { ... }


